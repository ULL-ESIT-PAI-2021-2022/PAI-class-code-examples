{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        // "include": ["src"],                     
        "include": ["src/T1A-IntroJS"],      
        "include": ["src/T1B-Functions"],      
        "include": ["src/T1C-Objects-Strings-Arrays"],      
        "include": ["src/T1F-OOP"],      
        "includePattern": ".js$",
        "exclude": ["doc"],                     // Don't document the documents!
        "exclude": ["node_modules"],            // Be gone, node_modules.
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "referenceTitle": "My PAI",
        "disableSort": false,
        "collapse": true,
        "resources": {
            "google": "https://www.google.com/"
        }
    },
    "opts": {
        "destination": "./doc/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "template": "./node_modules/jsdoc/templates/braintree"
    }
}
