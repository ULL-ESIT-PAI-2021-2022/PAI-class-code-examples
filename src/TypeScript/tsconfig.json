{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./dist",
    "declaration": true,
    "strictNullChecks": true,                 /* When type checking, take into account `null` and `undefined`. */
    "noImplicitAny": true,                    /* will issue an error whenever it would have inferred any:*/ 
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
        "node_modules",
        "build",
        "lib",
        "test",
        "public"
  ]
}

